
SOURCES_URI=https://github.com/golang/go/archive/go${VERSION}.tar.gz

function _build() {
	# Create profile
	mkdir -p ~/.software/etc/Golang

	cat <<-"PROFILE" > ~/.software/etc/Golang/profile
	export GOROOT=$DOTSOFTWARE_ROOT_DIR/opt/golang
	export GOPATH=$DOTSOFTWARE_ROOT_DIR/opt/gopath
	export PATH=$PATH:$GOROOT/bin
	PROFILE

	source ~/.software/etc/Golang/profile

	if [ -d $GOROOT ]; then
		rm -rf $GOROOT
	fi

	mkdir -p $GOPATH
	mv $CURRENT_VERSION_DIR $GOROOT

	cd $GOROOT/src
	./all.bash
}


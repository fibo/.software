
SOURCES_URI=https://github.com/golang/go/archive/go${GOLANG_VERSION}.tar.gz

function _build() {
	# Create profile
	mkdir -p $DOTSOFTWARE_HOME_DIR/etc/Golang

	cat <<-"PROFILE" > ~/.software/etc/Golang/profile
	export GOROOT=$DOTSOFTWARE_ROOT_DIR/opt/golang
	export GOPATH=$DOTSOFTWARE_ROOT_DIR/opt/gopath
	PROFILE

	source ~/.software/etc/Golang/profile

	if [ -d $GOROOT ]; then
		rm -rf $GOROOT
	fi

	mkdir -p $GOROOT
	mkdir -p $GOPATH

	cd $CURRENT_VERSION_DIR/src
	./all.bash
}



SOURCES_URI=https://github.com/golang/go/archive/go${GOLANG_VERSION}.tar.gz

function _build() {
	GOROOT=$DOTSOFTWARE_ROOT_DIR/opt/goroot
	GOPATH=$DOTSOFTWARE_ROOT_DIR/opt/gopath

	if [ -d $GOROOT ]; then
		rm -rf $GOROOT
	fi

	mkdir -p $GOROOT
	mkdir -p $GOPATH

	cd $CURRENT_VERSION_DIR/src
	./all.bash
}

function _create_profile() {
	mkdir -p $DOTSOFTWARE_HOME_DIR/etc/Golang

	cat << PROFILE > $DOTSOFTWARE_HOME_DIR/etc/Golang/profile
	GOROOT=$DOTSOFTWARE_ROOT_DIR/opt/golang
	GOPATH=$DOTSOFTWARE_ROOT_DIR/opt/gopath
	PROFILE
}



SOURCES_URI=https://github.com/golang/go/archive/go${VERSION}.tar.gz

function _build() {
	source ~/.software/etc/profile.d/golang.sh
	chmod +x ~/.software/etc/profile.d/golang.sh

	if [ -d $GOROOT ]; then
		rm -rf $GOROOT
	fi

	mkdir -p $GOPATH
	mv $CURRENT_VERSION_DIR $GOROOT

	cd $GOROOT/src
	./all.bash
}


_read 'SOURCES_URI'
SOURCES_FILENAME=$(basename $SOURCES_URI)
cd $ROOT_DIR/sources
CURRENT_VERSION_DIR=$(tar tf $SOURCES_FILENAME | head -1)
cd $ROOT_DIR/build
tar xzf $ROOT_DIR/sources/$SOURCES_FILENAME
cd $CURRENT_VERSION_DIR
./configure --prefix=$ROOT_DIR/$CURRENT_VERSION_DIR && make install
cd $ROOT_DIR
ln -s $CURRENT_VERSION_DIR current
